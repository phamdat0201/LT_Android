<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1F6E22"
        android:gravity="center"
        android:text="Chuyển đổi năm dương lịch"
        android:textColor="#FFFFFFFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Năm dương lịch:"
        android:layout_marginTop="40px"
        android:textSize="18sp"
        android:layout_below="@+id/tvTitle"/>

    <EditText
        android:id="@+id/editYear"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/tvYear"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/button"
        android:layout_width="280dp"
        android:layout_height="58dp"
        android:layout_below="@+id/editYear"
        android:layout_alignParentRight="true"
        android:text="Chuyển đổi"
        android:textColor="#FF000000"
        android:textSize="20sp"
        app:backgroundTint="@color/material_dynamic_neutral70" />

    <TextView
        android:id="@+id/tvYearAm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="40px"
        android:text="Năm dương lịch:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/editYearAm"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_below="@+id/button"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/tvYearAm"
        android:background="#FFEB3B"
        android:text=""
        android:textSize="18sp" />

</RelativeLayout>